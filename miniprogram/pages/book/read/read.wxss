.perspective {
  margin-top: 0px;
  perspective: 800px;
  transform-style: preserve-3d;
}

.book-wrap {
  width: 320px;
  height: 400px;
  position: relative;
  margin: 0 auto;
  transform: rotateX(25deg);
  transform-style: preserve-3d;
}

.page {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  font-size: 30px;
  display: flex;
  justify-content: center;
  align-items: center;
  transform-origin: left;
  border: 10px solid black;
  border-radius: 10px 5px 5px 0;
  background: -webkit-radial-gradient(white,white,white,gray)
}

.page-content{
  font-size: medium;
  font-style: italic;
  color: black;
  height: 300px;
  width: 200px;
  border-radius: 30px;
  
}

.bottom-page {
  position: relative;
  margin-top: 5px;
  height: 40px;
  border: 12px solid black;
  border-right: 0px;
  margin-left: -20px;
  transform: rotateX(0deg) rotateY(0deg);
  border-radius: 0px 0px 0px 30px;
  border-left: 12px solid #333333;
  border-bottom: 12px solid #333333;
  background: -webkit-linear-gradient(
    white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181),white,rgb(186, 181, 181)
    );
}